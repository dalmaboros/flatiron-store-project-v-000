<nav class="">
  <h1>Flatiron Store</h1>
    <ul>
        <% if user_signed_in? %>
          <p>Signed in as <%= current_user.email %> (<%= link_to "Sign out", destroy_user_session_path, method: :delete %>)</p>
          <% if current_user.current_cart %>
            <li>
              <%= link_to "Cart", cart_path(current_user.current_cart) %>
            </li>
          <% end %>
        <% else %>
          <li>
            <%= link_to "sign in", new_user_session_path %>
          </li>
          <li>
            <%= link_to "Sign up", new_user_registration_path %>
          </li>
        <% end %>

        <li> <%= link_to "Store Home", store_path %> </li>
        <% if !!@cart %>
          <li> <%= link_to "Cart", cart_path(current_cart) %></li>
        <% end %>
    </ul>
</nav>
